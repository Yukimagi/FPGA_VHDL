module bcd_decoder(cntin,bcdout);
	input [3:0]cntin;
	output reg [6:0]bcdout;
	always@(cntin)
		begin
			case(cntin)
				4'b0000:bcdout=7'b1111110;//0
				4'b0001:bcdout=7'b0110000;//1
				4'b0010:bcdout=7'b1101101;//2
				4'b0011:bcdout=7'b1111001;//3
				4'b0100:bcdout=7'b0110011;//4
				4'b0101:bcdout=7'b1011011;//5
				4'b0110:bcdout=7'b1011111;//6
				4'b0111:bcdout=7'b1110000;//7
				4'b1000:bcdout=7'b1111111;//8
				4'b1001:bcdout=7'b1111001;//9
			default:bcdout=7'b1001111;//E
	endcase
	end

	endmodule